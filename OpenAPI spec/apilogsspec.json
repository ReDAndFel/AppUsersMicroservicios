{
    "openapi": "3.0.1",
    "info": {
        "title": "Microservice Logs and Health Check API",
        "version": "1.0.0",
        "description": "API para gestionar logs de microservicios y realizar comprobaciones de salud."
    },
    "paths": {
        "/metrics": {
            "get": {
                "summary": "Obtiene métricas de Prometheus",
                "responses": {
                    "200": {
                        "description": "Métricas en formato Prometheus",
                        "content": {
                            "text/plain; version=0.0.4": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logs": {
            "get": {
                "summary": "Obtiene una lista de logs",
                "responses": {
                    "200": {
                        "description": "Lista de logs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "logs": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "tipo": {
                                                        "type": "string"
                                                    },
                                                    "aplicacion": {
                                                        "type": "string"
                                                    },
                                                    "clase_modulo": {
                                                        "type": "string"
                                                    },
                                                    "resumen": {
                                                        "type": "string"
                                                    },
                                                    "descripcion": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "pages": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Crea un nuevo log",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LogCreate"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Log creado exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "log_id": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logs/{application}": {
            "get": {
                "summary": "Obtiene logs por aplicación",
                "parameters": [
                    {
                        "name": "application",
                        "in": "path",
                        "description": "Nombre de la aplicación",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items por página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "start_date",
                        "in": "query",
                        "description": "Fecha de inicio",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "end_date",
                        "in": "query",
                        "description": "Fecha de fin",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "tipo",
                        "in": "query",
                        "description": "Tipo de log",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de logs por aplicación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "logs": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "tipo": {
                                                        "type": "string"
                                                    },
                                                    "aplicacion": {
                                                        "type": "string"
                                                    },
                                                    "clase_modulo": {
                                                        "type": "string"
                                                    },
                                                    "resumen": {
                                                        "type": "string"
                                                    },
                                                    "descripcion": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "pages": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "summary": "Realiza una verificación de salud general",
                "responses": {
                    "200": {
                        "description": "Estado de salud general",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "statusOverall": {
                                            "type": "string"
                                        },
                                        "version": {
                                            "type": "string"
                                        },
                                        "checks": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "db": {
                                                        "type": "object",
                                                        "properties": {
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "status": {
                                                                "type": "string"
                                                            },
                                                            "from": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    },
                                                    "nats": {
                                                        "type": "object",
                                                        "properties": {
                                                            "status": {
                                                                "type": "string"
                                                            },
                                                            "from": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/health/live": {
            "get": {
                "summary": "Realiza una verificación de vivacidad",
                "responses": {
                    "200": {
                        "description": "Estado de vivacidad",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/health/ready": {
            "get": {
                "summary": "Realiza una verificación de disponibilidad",
                "responses": {
                    "200": {
                        "description": "Estado de disponibilidad",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LogCreate": {
                "type": "object",
                "properties": {
                    "tipo": {
                        "type": "string"
                    },
                    "aplicacion": {
                        "type": "string"
                    },
                    "clase_modulo": {
                        "type": "string"
                    },
                    "resumen": {
                        "type": "string"
                    },
                    "descripcion": {
                        "type": "string"
                    }
                },
                "required": [
                    "tipo",
                    "aplicacion",
                    "clase_modulo",
                    "resumen",
                    "descripcion"
                ]
            }
        }
    }
}